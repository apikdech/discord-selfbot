[Unit]
Description=Discord Bot Service
After=network.target

[Service]
Type=simple
User=apikdech
Group=apikdech
WorkingDirectory=/opt/discord-bot
Environment=PATH=/opt/discord-bot/venv/bin
Environment=TZ=Asia/Jakarta
# Add this if using HTTPS with PAT
Environment=GIT_ASKPASS=/opt/discord-bot/git-askpass.sh
ExecStart=/opt/discord-bot/venv/bin/python count.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
